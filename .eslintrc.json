{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:solid/recommended"
    ],
    "plugins": [
        "solid"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "no-unused-expressions": "off",
        "keyword-spacing": "off",
        "linebreak-style": 0,
        "no-console": 0,
        "arrow-body-style": 0,
        "no-shadow": 0,
        "no-param-reassign": 0,
        "import/no-cycle": 0,
        "max-len": [
            "error",
            {
                "code": 2000
            }
        ],
        "prefer-destructuring": 0,
        "consistent-return": 0,
        "import/prefer-default-export": 0,
        "no-useless-escape": 0,
        "import/no-extraneous-dependencies": 0,
        "solid/self-closing-comp": 0,
        "import/extensions": [
            "error",
            {
                "js": "never",
                "jsx": "never",
                "json": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "eslint-import-resolver-custom-alias": {
                "alias": {
                    "~": "./src"
                },
                "extensions": [
                    ".js",
                    ".jsx"
                ],
                "packages": [
                    "packages/*"
                ]
            }
        }
    }
}